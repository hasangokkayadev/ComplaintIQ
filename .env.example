# ComplaintIQ Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_WORKERS=4

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Database Configuration (if using)
DATABASE_URL=sqlite:///./complaintiq.db
DATABASE_ECHO=False

# Model Configuration
MODEL_PATH=./models
MODEL_NAME=final_model.pkl
VECTORIZER_PATH=./models/tfidf_vectorizer.pkl
SCALER_PATH=./models/feature_scaler.pkl

# Data Configuration
DATA_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@complaintiq.com

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
AWS_S3_BUCKET=complaintiq-data

# Sentry Configuration (for error tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_DATA_COLLECTION=true
ENABLE_MODEL_TRAINING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS=true

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=3600

# Deployment
ENVIRONMENT=development
VERSION=1.0.0
